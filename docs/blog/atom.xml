---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Michael Troger's Blog</title>
	<link href="https://michaeltroger.com/blog/atom.xml" rel="self"/>
	<link href="https://michaeltroger.com/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>https://michaeltroger.com/blog</id>
	<author>
		<name>Michael Troger</name>
		<email>rss@troger.app</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="https://michaeltroger.com{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>https://michaeltroger.com{{ post.id }}</id>
			<content type="html">{{ post.content | replace: '<a href="/', '<a href="https://michaeltroger.com/' | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>

